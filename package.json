{
  "name": "project",
  "version": "1.0.0",
  "description": "Todo backend API powered by Express and Prisma",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "cross-env NODE_ENV=test DATABASE_URL=\"file:./test.db\" prisma migrate deploy && cross-env NODE_ENV=test DATABASE_URL=\"file:./test.db\" vitest run",
    "test:watch": "cross-env NODE_ENV=test DATABASE_URL=\"file:./test.db\" prisma migrate deploy && cross-env NODE_ENV=test DATABASE_URL=\"file:./test.db\" vitest",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meetz016/cto-test.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Meetz016/cto-test/issues"
  },
  "homepage": "https://github.com/Meetz016/cto-test#readme",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  }
}
